<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressionado e Habilitado -->
    <item android:state_enabled="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/button_enabled_payment"/>
            <stroke android:width="1dp" android:color="@color/button_enabled_payment"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Habilitado e nÃ£o pressionado -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/button_enabled_payment"/>
            <stroke android:width="1dp" android:color="@color/button_enabled_payment"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Desabilitado -->
    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/button_disable"/>
            <stroke android:width="1dp" android:color="@color/button_disable"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>