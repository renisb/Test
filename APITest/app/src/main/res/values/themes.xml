<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APITest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_enabled_entrance</item>
        <item name="colorPrimaryVariant">@color/parking_darkgray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@android:color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="borderWidth">6dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:shadowColor">@color/parking_darkgray</item>
    </style>
    <style name="Button.Purple" parent="ThemeOverlay.AppCompat">
        <item name="cardCornerRadius">12dp</item>
        <item name="backgroundColor">@color/button_enabled_payment</item>
        <item name="colorPrimary">@color/button_enabled_payment</item>
    </style>
    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="cardCornerRadius">12dp</item>
        <item name="backgroundColor">@color/button_enabled_entrance</item>
        <item name="colorPrimary">@color/button_enabled_entrance</item>
    </style>
</resources>